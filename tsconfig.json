{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    ".idea",
    ".vscode",
    ".vagrant",
    "src/typings",
    "bin",
    "index.js",
    "index.d.ts"
  ]
}
